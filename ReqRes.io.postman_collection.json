		{
			"name": "Login User Succesful",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var responseBody = pm.response.json();\r",
							"\r",
							"var tokenRes = responseBody.token; \r",
							"var tokenReq = pm.environment.get(\"token\");\r",
							"\r",
							"pm.test(\"Статус код ответа равен 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"token из ответа равен token из регистрации\", function () {\r",
							"    pm.expect(tokenRes).to.deep.equal(tokenReq);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
