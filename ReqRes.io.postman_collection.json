		{
			"name": "Get List Of Users",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var responseBody = pm.response.json();\r",
							"\r",
							"//определяем переменную page, равную переменной page из запроса\r",
							"var pageReq = 1; \r",
							"//переменная page(number) из ответа\r",
							"var pageRes = responseBody.page; \r",
							"//определяем переменные для имени и фамилии \r",
							"var firstNameRes = responseBody.data[3].first_name;\r",
							"var lastNameRes = responseBody.data[3].last_name;\r",
							"\r",
							"pm.test(\"Статус код ответа равен 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Сравнение page из запроса и ответа\", function () {\r",
							"    pm.expect(pageReq).to.deep.equal(pageRes);\r",
							"});\r",
							"\r",
							"//проверка, что массив значений data приходит не пустой \r",
							"if (responseBody.data && responseBody.data.length>0) {\r",
							"    pm.test(\"Проверка, что массив data не пустой и содержит значения\", function () {\r",
							"    pm.expect(responseBody.data).is.not.oneOf([null, undefined]);});\r",
							"    }\r",
							"\r",
							"//проверка, что четвертый элемент в массиве data содержит Eve Holt\r",
							"pm.test(\"Массив data содержит имя Eve\", function () {\r",
							"    pm.expect(firstNameRes).to.deep.equal(\"Eve\");\r",
							"});\r",
							"pm.test(\"Массив data содержит фамилию Holt\", function () {\r",
							"    pm.expect(lastNameRes).to.deep.equal(\"Holt\");\r",
							"});\r",
							"\r",
							"//удаляем переменные из environment\r",
							"pm.environment.unset(\"id\");\r",
							"pm.environment.unset(\"token\");\r",
							"pm.environment.unset(\"email\");"
						],
						"type": "text/javascript"
					}
				}
			],
